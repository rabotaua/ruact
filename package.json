{
  "name": "react-starter",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "start:timer": "webpack-dev-server --env timer",
    "start:counter": "webpack-dev-server --env counter",
    "start": "npm run lint -s & npm run test -s & npm run dist -s",
    "dist": "webpack -p",
    "lint:js": "eslint --ignore-path .gitignore .",
    "lint:css": "stylelint ./components/**/*.scss",
    "lint:staged": "lint-staged",
    "lint": "npm run lint:js -s & npm run lint:css -s",
    "test": "ava",
    "test:watch": "ava --watch",
    "cover": "nyc ava",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": "lint:js",
    "*.scss": "lint:css"
  },
  "ava": {
    "files": [
      "**/*.spec.js"
    ],
    "require": [
      "babel-register",
      "jsdom-global/register",
      "ignore-styles"
    ],
    "babel": "inherit"
  },
  "nyc": {
    "exclude": [
      "node_modules",
      "**/*.spec.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0",
      "react"
    ],
    "plugins": [
      "react-hot-loader/babel"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:react/recommended",
      "plugin:ava/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true,
        "modules": true
      }
    },
    "plugins": [
      "react",
      "import",
      "ava"
    ],
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "jquery": true,
      "mocha": true
    },
    "rules": {
      "semi": [
        "error",
        "never"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "indent": [
        "error",
        "tab",
        {
          "SwitchCase": 1
        }
      ],
      "arrow-spacing": [
        "error",
        {
          "before": true,
          "after": true
        }
      ]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "color-hex-case": "lower",
      "string-quotes": "single",
      "font-family-name-quotes": "always-where-recommended",
      "selector-pseudo-element-colon-notation": "single",
      "number-leading-zero": "never",
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ],
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "composes"
          ]
        }
      ],
      "indentation": "tab"
    }
  },
  "devDependencies": {
    "autoprefixer": "^6.4.1",
    "ava": "^0.16.0",
    "babel-core": "^6.0.20",
    "babel-eslint": "^7.0.0",
    "babel-loader": "^6.0.1",
    "babel-preset-es2015": "^6.0.15",
    "babel-preset-react": "^6.0.15",
    "babel-preset-stage-0": "^6.0.15",
    "babel-register": "^6.14.0",
    "css-loader": "^0.25.0",
    "enzyme": "^2.4.1",
    "eslint": "^3.5.0",
    "eslint-plugin-ava": "^3.0.0",
    "eslint-plugin-import": "^1.15.0",
    "eslint-plugin-react": "^6.2.2",
    "extract-text-webpack-plugin": "^2.0.0-beta.4",
    "husky": "^0.11.7",
    "ignore-styles": "^5.0.1",
    "jsdom": "^9.5.0",
    "jsdom-global": "^2.1.0",
    "lint-staged": "^3.0.2",
    "node-sass": "^3.10.0",
    "nyc": "^8.3.0",
    "postcss-loader": "^0.13.0",
    "react-addons-test-utils": "^15.3.1",
    "react-hot-loader": "^3.0.0-beta.4",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "stylelint": "^7.2.0",
    "stylelint-config-standard": "^13.0.0",
    "webpack": "^2.1.0-beta.25",
    "webpack-dev-server": "2.1.0-beta.5"
  },
  "dependencies": {
    "axios": "^0.14.0",
    "react": "^15.0.1",
    "react-dom": "^15.0.1",
    "react-redux": "^4.4.5",
    "redux": "^3.6.0",
    "redux-thunk": "^2.1.0"
  }
}
